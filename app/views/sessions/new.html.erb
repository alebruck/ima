<div class="container">
  <div class="form-signin">
    <h1>Login</h1>
    <%= form_tag user_session_path, method: :post do %>
      <div class="form-group">
        <%= label_tag :user, "Username: " %>
        <%= text_field_tag :user, nil, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :language, "Language: " %>
        <%= select_tag :language, options_for_select(@languages), class: 'form-control' %>
      </div>
      <%= submit_tag "login", class: 'btn btn-lg btn-primary btn-block' %>
    <% end %>
  </div>
</div>
